# Application
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/produtos_db"

# PostgreSQL Settings (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=produtos_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# API Configuration
API_PREFIX=api
API_VERSION=v1

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Logging
LOG_LEVEL=debug

# Prisma
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings
SHADOW_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/produtos_shadow_db"